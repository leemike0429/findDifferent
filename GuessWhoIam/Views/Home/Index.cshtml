<!DOCTYPE html>
<html lang="zh-hant">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/index.min.css">
    <link rel="stylesheet" href="~/css/Reset.css">
</head>

<body>
  <div id="app" v-cloak>
    <div class="warning">
      <h1>{{$t('warning')}}</h1>
    </div>
    <div class="container" id="index">
      <div class="row">
        <div class="hovertree">
          <div class="title">
            <h1> {{$t('index.titles[0]')}}<span>{{$t('index.titles[1]')}}</span>{{$t('index.titles[2]')}}</h1>
          </div>
          <div class="button-group">
            <a href="~/html/Hall.html"><img src="~/images/icon.png" alt="">{{$t('index.hall')}}</a>
            <br>
            <button data-toggle="modal" data-target="#exampleModal">
              <img src="~/images/icon.png" alt="">{{$t('index.rule')}}
            </button>
            <br>
            <button v-on:click="openSetting">
              <img src="~/images/icon.png" alt="">{{$t('index.choice')}}
            </button>
            <div class="lang-area">
              <span v-for="lang in langs" v-on:click="changeLang(lang.value)" :class="{active:isShow}">{{lang.lang}}</span>
            </div>
          </div>
        </div>
      </div>
      <canvas id="canvas"></canvas>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-body">
            <div class="props-group">
              <div class="title">
                <h2>{{$t('index.itemdescription')}}</h2>
              </div>
              <div class="props">
                <div class="pic">
                  <img src="/images/prop-block.png" alt="">
                </div>
                <div class="text">
                  <h2>{{$t('index.cards[0].name')}}</h2>
                  <p>{{$t('index.cards[0].effect')}}</p>
                </div>
              </div>
              <div class="props">
                <div class="pic">
                  <img src="/images/prop-exchange.png" alt="">
                </div>
                <div class="text">
                  <h2>{{$t('index.cards[1].name')}}</h2>
                  <p>{{$t('index.cards[1].effect')}}</p>
                </div>
              </div>
              <div class="props">
                <div class="pic">
                  <img src="/images/prop-ghost.png" alt="">
                </div>
                <div class="text">
                  <h2>{{$t('index.cards[2].name')}}</h2>
                  <p>{{$t('index.cards[2].effect')}}</p>
                </div>
              </div>
              <div class="props">
                <div class="pic">
                  <img src="/images/prop-time.png" alt="">
                </div>
                <div class="text">
                  <h2>{{$t('index.cards[3].name')}}</h2>
                  <p>{{$t('index.cards[3].effect')}}</p>
                </div>
              </div>
            </div>
            <div class="gamepic">
              <div class="title">
                <h2>{{$t('index.gameintroduction')}}</h2>
              </div>
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <div class="text">
                      <p>{{$t('index.rules[0]')}}</p>
                    </div>
                    <div class="pic">
                      <img src="/images/introduce-correct.png" alt="">
                      <img src="/images/introduce-error.png" alt="">
                    </div>
                  </div>
                  <div class="carousel-item">
                    <div class="text">
                      <p>{{$t('index.rules[1]')}}</p>
                    </div>
                    <div class="pic blood">
                      <img src="/images/blood.png" alt="">
                      <img src="/images/minusblood.png" alt="">
                    </div>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                   data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                   data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
          integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
          crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
          integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
          crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
          integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF"
          crossorigin="anonymous"></script>
  <script src="../js/gamingResultFirework.js "></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.12/vue.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue-i18n/8.24.2/vue-i18n.min.js"></script>
  <script>
  </script>
  <script type="module" src="~/js/index.js"></script>
</body>

</html>